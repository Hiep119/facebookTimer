{
  "manifest_version": 2,
  "name": "Facebook Timer",
  "description": "Extension that ask \"How long do you want to be on Facebook for?\"",
  "version": "1.0.2",
  "homepage_url": "https://github.com/Hiep119/facebookTimer",
  "browser_action": {
    "default_title": "Facebook Timer"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["*://*.facebook.com/*"],
    "js": ["content.js"],
    "css": ["content.css"]
  }],
  "background": {
    "scripts": ["background.js"]
  }
}
